<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>
<g:HTMLPanel> 
    <b:Row>
        <b:Column size="4" offset="6">
            <b:WellForm>
                <b:Legend>Please Log In</b:Legend>
                <b:Alert visible="false"/>
                <b:Fieldset>
                    <b:ControlGroup>
                        <b:Controls>
                            <b:ControlLabel for="username">User name</b:ControlLabel>
                            <b:TextBox ui:field="usernameTextBox" placeholder="User name" b:id="username"/>
                            <b:ControlLabel for="password">Password</b:ControlLabel>
                            <b:PasswordTextBox  ui:field="passwordTextBox" placeholder="Passowrd" b:id="password"/>
                        </b:Controls>
                    </b:ControlGroup>
                </b:Fieldset>
                <b:SubmitButton ui:field="loginButton">Log In</b:SubmitButton>            
            </b:WellForm>
        </b:Column>
    </b:Row>
</g:HTMLPanel>
</ui:UiBinder>
